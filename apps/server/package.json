    "@db": "workspace:*",
    "@env": "workspace:*",
    "better-auth": "^1.4.18",
    "dotenv": "^17.3.1",
    "elysia": "^1.4.25",
    "nodemailer": "^8.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/nodemailer": "^7.0.10",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  }
}
