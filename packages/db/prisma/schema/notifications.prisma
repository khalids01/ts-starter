model Notification {
    id        String   @id @default(cuid())
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    title     String
    message   String
    read      Boolean  @default(false)
    url       String?
    createdAt DateTime @default(now())

    @@index([userId])
    @@map("notification")
}
